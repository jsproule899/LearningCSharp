@model IEnumerable<MvcMovie.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>


<div class="row row-cols-2 row-cols-sm-3 row-cols-md-5 g-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <a asp-controller="Videos" asp-action="Player" asp-route-id="@item.Video.Id">
                <div class="card shadow-sm " style="aspect-ratio: 2/3;">
                    <div class="play-button-container">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="grey"
                            class="bi bi-play-circle-fill play-button" viewBox="0 0 16 16">
                            <path
                                d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M6.79 5.093A.5.5 0 0 0 6 5.5v5a.5.5 0 0 0 .79.407l3.5-2.5a.5.5 0 0 0 0-.814z" />
                        </svg>
                    </div>

                    <div style=" position: absolute; z-index: 1; bottom: 10px; right:10px ">
                        @for (int i = 1; i < item.Rating / 2; i++)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gold" class="bi bi-star-fill"
                                viewBox="0 0 16 16">
                                <path
                                    d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                            </svg>
                        }
                    </div>
                    <div class="card-body "
                        style="contain: strict; height: 100%; width: 100%; background-image: url(https://image.tmdb.org/t/p/original@(item.Poster)); background-size: cover;">
                    </div>
                </div>
            </a>

            <p class="card-title text-center">@Html.DisplayFor(modelItem => item.Title) <small
                    class="card-subtitle text-center text-muted">(@Html.DisplayFor(modelItem =>
                item.ReleaseDate.Year))</small></p>
            <p class="card-subtitle text-center text-muted">@((int)item.Runtime / 60) Hr @(item.Runtime % 60)
                mins</p>
        </div>
    }
</div>

<script>

</script>